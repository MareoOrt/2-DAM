<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/id_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#474747"
        android:text="Ejercicio2 - Componentes bàsicos"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/id_nombre"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Introduce"
        android:inputType="text" />

    <RadioGroup
        android:id="@+id/id_radioGroup"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/id_soltero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soltero" />

        <RadioButton
            android:id="@+id/id_casado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Casado" />

    </RadioGroup>

    <Spinner
        android:id="@+id/id_provincias"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:entries="@array/provincias" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/id_futbol"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="Fùtbol" />

        <CheckBox
            android:id="@+id/id_balocensto"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Baloncesto" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/id_tenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tenis" />

    <Button
        android:id="@+id/id_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar" />

</LinearLayout>