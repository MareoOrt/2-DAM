<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/til_tv_dato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inserte dato ..." />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_dato_devuelto"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=""
        android:textSize="34dp"
        app:layout_constraintEnd_toEndOf="@+id/bt_guardar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_dato" />

    <Button
        android:id="@+id/bt_guardar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar dato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dato_devuelto"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/bt_recuperar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recuperar dato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_guardar"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>