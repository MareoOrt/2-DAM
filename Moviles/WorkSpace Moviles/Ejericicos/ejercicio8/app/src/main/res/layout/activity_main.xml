<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tlMarcador"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:background="#000000"
        android:stretchColumns="2">

        <TableRow
            android:id="@+id/trPuntos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLocalM"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFC107"
                android:textSize="96sp" />

            <TextView
                android:id="@+id/tvVisitM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFC107"
                android:textColorHint="#000000"
                android:textSize="96sp" />
        </TableRow>

        <TableRow
            android:id="@+id/trDatos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLocalT"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="LOCAL"
                android:textAlignment="center"
                android:textColor="#FFC107"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tvVisitT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="VISITANTE"
                android:textAlignment="center"
                android:textColor="#FFC107"
                android:textSize="34sp" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tlDorsales"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TableRow
            android:id="@+id/trLocales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLocalD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCALES:"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/trVisitantes"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <TextView
                android:id="@+id/tvVisitD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VISITANTES: "
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

    <RadioGroup
        android:id="@+id/rgPuntos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbLibre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiro Libre" />

        <RadioButton
            android:id="@+id/rb2p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2P" />

        <RadioButton
            android:id="@+id/rb3P"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3P" />
    </RadioGroup>

</LinearLayout>