<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/et_Dato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Inserte el texto ..."
        android:inputType="text" />

    <Button
        android:id="@+id/bt_Enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar" />

    <RadioGroup
        android:id="@+id/rg_Eleccion"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rb_Fragment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ir al fragment 1" />

        <RadioButton
            android:id="@+id/rb_Fragment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ir al fragment 2" />
    </RadioGroup>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_Fragment"
        android:name="com.example.ejem19_datosfragment.BlankFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>