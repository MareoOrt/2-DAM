<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/my_tool_bar"
        layout="@layout/toolbar_personalizado" />

    <Button
        android:id="@+id/bt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasar al segundo Activity"
        app:layout_constraintBottom_toBottomOf="@+id/my_tool_bar"
        app:layout_constraintEnd_toEndOf="@+id/my_tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_tool_bar" />


</androidx.constraintlayout.widget.ConstraintLayout>