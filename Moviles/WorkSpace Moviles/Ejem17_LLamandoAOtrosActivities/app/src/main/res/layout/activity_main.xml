<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_enviar_texto2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boton texto 1" />
    <Button
        android:id="@+id/bt_enviar_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boton texto 2" />
    <Button
        android:id="@+id/bt_enviar_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boton enviar email" />
    <Button
        android:id="@+id/bt_Llamada_telf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boton llamada telefonica" />
    <Button
        android:id="@+id/bt_lanzar_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lanzar web" />
    <Button
        android:id="@+id/bt_google_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir Google Maps" />

</LinearLayout>